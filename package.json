{
  "name": "@hrefcl/apidoc",
  "version": "5.0.5",
  "description": "APIDoc v5 - RESTful web API Documentation Generator with Vue 3 and modern features",
  "private": false,
  "keywords": [
    "api",
    "apidoc",
    "apicat",
    "documentation",
    "testing",
    "rest",
    "restful",
    "monorepo"
  ],
  "homepage": "https://apidoc.app",
  "bugs": {
    "url": "https://github.com/hrefcl/apidoc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hrefcl/apidoc.git"
  },
  "license": "MIT",
  "author": "Href Spa <hola@apidoc.app>",
  "maintainers": [
    {
      "name": "hrefcl"
    }
  ],
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "packageManager": "yarn@1.22.22",
  "type": "commonjs",
  "main": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "bin": {
    "apidoc": "bin/apidoc"
  },
  "directories": {
    "doc": "docs",
    "example": "example",
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "//": "=== CONTAINER (LEGACY) ===",
    "build": "npm run build:css && tsc && npm run build:copy-core",
    "build:css": "node scripts/build-css.js",
    "build:css:dev": "node scripts/build-css.js --dev",
    "build:copy-core": "cp core/*.js dist/core/ 2>/dev/null && cp -r core/errors core/filters core/languages core/parsers core/utils core/workers dist/core/ 2>/dev/null || true",
    "build:clean": "rm -rf dist && npm run build:css && npm run build",
    "build:watch": "tsc --watch",
    "example": "npm run build && ./bin/apidoc generate --config examples/categories/apidoc.json -o tmp/apidoc-output",
    "dev:template": "cd apps/apidoc-template-v5 && npm run dev",
    "start": "npx serve tmp/apidoc-output -p 8080",
    "preview": "npx serve tmp/apidoc-output -p 9999",
    "example:v4": "npm run build && ./bin/apidoc -v -i examples/apidoc -o tmp/apidoc-output-v4 --old",
    "start:v4": "npx serve tmp/apidoc-output-v4 -p 8080",
    "dev": "npm run build:watch",
    "test": "mocha --colors --no-package --no-config 'test/**/*_test.*js' 2>/dev/null || echo '⚠️  No Mocha tests found (test/ directory may not be checked in)'",
    "test:ci": "export CI=true; npm run test:lint && npm test;",
    "test:e2e": "cd e2e-tests && npx playwright test",
    "test:lint": "npm run test:spell-support && npm run test:spell && eslint;",
    "test:spell": "cspell --fail-fast './bin/apidoc' './example/**/*' './lib/**/*.*js' './template/src/*' './test/**/*' --config ./cspell.config.json",
    "test:spell-support": "cspell --fail-fast ./README.md ./CONTRIBUTING.md ./CONTRIBUTORS.md ./SECURITY.md --config ./cspell.config.json",
    "test:fix": "eslint --fix",
    "test:packages": "yarn workspaces run test",
    "typecheck": "tsc --noEmit",
    "eslint": "eslint .",
    "format": "npm run format:handlebars && prettier --write \"**/*.{ts,js,html,json}\"",
    "format:html": "npm run format:handlebars && prettier --write \"template/**/*.html\"",
    "format:handlebars": "node scripts/format-handlebars.js",
    "format:check": "prettier --check \"**/*.{ts,js,html,json}\"",
    "pre-commit": "npm run typecheck && npm run eslint && npm run test",
    "docs": "typedoc",
    "docs:serve": "npm run docs && npx serve docs/api -p 3001",
    "docs:watch": "typedoc --watch",
    "build:packages": "yarn workspaces run build",
    "build:template": "cd apps/apidoc-template-v5 && npm run build && cd ../.. && cp -r apps/apidoc-template-v5/dist template",
    "prepare": "npm run build:clean && npm run build:template",
    "prepublishOnly": "npm run build:clean && npm run build:template",
    "release": "npm run build:clean && changelog --non-cc --link-url https://github.com/hrefcl/apidoc.git",
    "container:build": "podman build -t apidoc/apidoc .",
    "serve": "export PROTOCOL=http; export HOST=127.0.0.1; export PORT=8080; npm run serve:stop; npm run example && podman run --rm --name apidoc -p $PORT:80 -v ./tmp/apidoc-output:/usr/share/nginx/html:ro -d nginx; npm run serve:open",
    "serve:open": "xdg-open $PROTOCOL://$HOST:$PORT/ || open $PROTOCOL://$HOST:$PORT/",
    "serve:stop": "podman stop apidoc"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@inquirer/prompts": "^7.8.6",
    "@popperjs/core": "^2.11.8",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/typography": "^0.5.19",
    "@types/crypto-js": "^4.2.2",
    "autoprefixer": "^10.4.21",
    "bootstrap": "^5.3.8",
    "cli-progress": "^3.12.0",
    "clsx": "^2.1.1",
    "commander": "^14.0.1",
    "crypto-js": "^4.2.0",
    "diff-match-patch": "^1.0.5",
    "ejs": "^3.1.10",
    "esbuild": "^0.25.10",
    "esbuild-postcss": "^0.0.4",
    "fs-extra": "^11.3.2",
    "glob": "^11.0.3",
    "handlebars": "^4.7.8",
    "highlight.js": "^11.11.1",
    "iconv-lite": "^0.7.0",
    "jquery": "^3.7.1",
    "js-yaml": "^4.1.0",
    "klaw-sync": "^7.0.0",
    "lodash": "^4.17.21",
    "markdown-it": "^14.1.0",
    "nodemon": "^3.1.10",
    "ora": "^9.0.0",
    "path-to-regexp": "^8.3.0",
    "picocolors": "^1.1.1",
    "postcss": "^8.5.6",
    "puppeteer": "^24.22.3",
    "semver": "^7.7.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "tailwindcss-animate": "^1.0.7",
    "typedoc": "^0.28.13",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.55.1",
    "@types/bootstrap": "^5.2.10",
    "@types/commander": "^2.12.5",
    "@types/diff-match-patch": "^1.0.36",
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/handlebars": "^4.1.0",
    "@types/jquery": "^3.5.33",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.20",
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.6.2",
    "@types/semver": "^7.7.1",
    "@types/serve-handler": "^6.1.4",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "changelog-light": "^3.0.3",
    "concurrently": "^9.2.1",
    "cspell": "^9.2.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-html": "^8.1.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^60.8.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "globals": "^16.4.0",
    "mocha": "^11.7.4",
    "playwright": "^1.55.1",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-sort-json": "^4.1.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "serve-handler": "^6.1.6",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "os": [
    "darwin",
    "freebsd",
    "linux",
    "openbsd",
    "win32"
  ],
  "files": [
    "dist/**/*",
    "bin/**/*",
    "template/**/*",
    "LICENSE",
    "README.md"
  ],
  "publishConfig": {}
}
