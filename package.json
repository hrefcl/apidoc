{
  "name": "@hrefcl/apidoc",
  "version": "4.0.2-beta.5",
  "description": "RESTful web API Documentation Generator",
  "keywords": [
    "api",
    "apidoc",
    "doc",
    "documentation",
    "rest",
    "restful"
  ],
  "homepage": "https://apidocts.com",
  "bugs": {
    "url": "https://github.com/hrefcl/apidoc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hrefcl/apidoc.git"
  },
  "license": "MIT",
  "author": "Href Spa <hola@apidoc.app>",
  "maintainers": [
    {
      "name": "hrefcl"
    }
  ],
  "type": "commonjs",
  "main": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "bin": {
    "apidoc": "bin/apidoc"
  },
  "directories": {
    "doc": "docs",
    "example": "example",
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "build": "tsc",
    "build:clean": "rm -rf dist && npm run build",
    "build:debug": "npm run build:example -- --debug",
    "build:example": "npm run build && ./bin/apidoc -v -i example/ -o ./tmp/apidoc-output",
    "build:watch": "tsc --watch",
    "container:build": "podman build -t apidoc/apidoc .",
    "dev": "npm run build:watch",
    "dev:full": "concurrently \"npm run dev:hot\" \"npm run start\"",
    "dev:hot": "node scripts/dev-watch.js",
    "dev:template": "npm run build:example && npm run start",
    "docs": "typedoc",
    "docs:serve": "npm run docs && npx serve docs/api -p 3001",
    "docs:watch": "typedoc --watch",
    "migrate:clean": "find . -name '*.js' -o -name '*.mjs' | grep -v node_modules | grep -v dist | grep -v test | grep -v example | xargs rm -f",
    "migrate:ts": "node scripts/migrate-to-ts.js",
    "pre-commit": "npm run typecheck && npm run eslint && npm run test",
    "prepublishOnly": "npm run build:clean",
    "release": "npm run build:clean && changelog --non-cc --link-url https://github.com/hrefcl/apidoc.git",
    "serve": "export PROTOCOL=http; export HOST=127.0.0.1; export PORT=8080; npm run serve:stop; npm run build:example && podman run --rm --name apidoc -p $PORT:80 -v ./tmp/apidoc-output:/usr/share/nginx/html:ro -d nginx; npm run serve:open",
    "serve:open": "xdg-open $PROTOCOL://$HOST:$PORT/ || open $PROTOCOL://$HOST:$PORT/",
    "serve:stop": "podman stop apidoc",
    "start": "npx serve tmp/apidoc-output -p 8080 ",
    "test": "mocha --colors --no-package --no-config 'test/**/*_test.*js'",
    "test:ci": "export CI=true; npm run test:lint && npm test;",
    "test:fix": "eslint --fix",
    "test:lint": "npm run test:spell-support && npm run test:spell && eslint;",
    "test:spell": "cspell --fail-fast './bin/apidoc' './example/**/*' './lib/**/*.*js' './template/index.html' './template/src/*' './test/**/*' --config ./cspell.config.json",
    "test:spell-support": "cspell --fail-fast ./README.md ./CONTRIBUTING.md ./CONTRIBUTORS.md ./SECURITY.md --config ./cspell.config.json",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/highlight.js": "^9.12.4",
    "cli-progress": "^3.12.0",
    "clsx": "^2.1.1",
    "commander": "^14.0.0",
    "crypto-js": "^4.2.0",
    "diff-match-patch": "^1.0.5",
    "esbuild": "^0.25.9",
    "framer-motion": "^12.23.16",
    "fs-extra": "^11.3.1",
    "glob": "^11.0.3",
    "handlebars": "^4.7.8",
    "highlight.js": "^11.11.1",
    "iconv-lite": "^0.7.0",
    "jquery": "^3.6.0",
    "js-yaml": "^4.1.0",
    "klaw-sync": "^7.0.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.544.0",
    "markdown-it": "^14.1.0",
    "nodemon": "^3.1.10",
    "ora": "^5.4.1",
    "path-to-regexp": "^8.3.0",
    "picocolors": "^1.1.1",
    "popper.js": "^1.16.1",
    "semver": "^7.7.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "typedoc": "^0.28.13",
    "winston": "^3.17.0",
    "esbuild-postcss": "^0.0.4",
    "@tailwindcss/postcss": "^4.1.13",
    "autoprefixer": "^10.4.21",
    "tailwindcss": "^4.1.13",
    "postcss": "^8.5.6"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/typography": "^0.5.18",
    "@types/commander": "^2.12.2",
    "@types/diff-match-patch": "^1.0.36",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/handlebars": "^4.1.0",
    "@types/jquery": "^3.5.33",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.20",
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.4.0",
    "@types/semver": "^7.5.8",
    "@types/serve-handler": "^6.1.4",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "changelog-light": "^3.0.3",
    "concurrently": "^9.2.1",
    "cspell": "^9.2.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^58.1.0",
    "eslint-plugin-n": "^17.22.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "globals": "^16.4.0",
    "mocha": "^11.7.2",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-sort-json": "^4.1.1",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "serve-handler": "^6.1.6",
    "typedoc-plugin-markdown": "^4.3.4",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "os": [
    "darwin",
    "freebsd",
    "linux",
    "openbsd",
    "win32"
  ],
  "files": [
    "dist/**/*",
    "bin/**/*",
    "template/**/*",
    "LICENSE",
    "README.md"
  ],
  "publishConfig": {}
}
